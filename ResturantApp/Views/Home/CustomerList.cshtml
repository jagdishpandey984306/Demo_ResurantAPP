@model List<Resturant.Shared.ViewModel.Customer.CustomerViewModel>

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>Customer Name</th>
            <th>Customer Permanent Address</th>
            <th>Customer Temporary Address</th>
            <th>Customer Email</th>
            <th>Customer Contact No</th>
            <th>Remarks</th>
        </tr>
        @{
            foreach (var detail in Model)
            {
                <tr>
                    <td>@detail.CustomerName</td>
                    <td>@detail.PermanentAddress</td>
                    <td>@detail.TemporaryAddress</td>
                    <td>@detail.EmailAddress</td>
                    <td>@detail.ContactNumber</td>
                    <td>
                        <a asp-controller="Home" asp-action="EditEmployee" asp-route-id="@detail.Id" class="btn btn-sm btn-success">
                            Edit
                        </a>
                    </td>
                </tr>
            }
        }
    </table>
</div>
